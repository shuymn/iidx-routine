{
  "name": "iidx-routine",
  "private": true,
  "bin": {
    "iidx-routine": "bin/iidx-routine.js"
  },
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack",
    "deploy": "run-s build deploy:*",
    "deploy:chromium-layer": "npm run zip:chrome-aws-lambda && cdk deploy ChromiumLayerStack",
    "deploy:iidx-routine": "cdk deploy IidxRoutineStack",
    "zip:chrome-aws-lambda": "test -f dist/layers/chrome_aws_lambda.zip || bash scripts/zip-chrome-aws-lambda.sh",
    "dev": "AWS_SDK_LOAD_CONFIG=true NODE_ENV=development ts-node src/main.ts --",
    "diff": "cdk diff",
    "synth": "cdk synth --no-staging > template.yml",
    "test": "jest",
    "typecheck": "tsc -p . --noEmit",
    "lint": "eslint .",
    "clean": "run-s clean:*",
    "clean:dist": "rimraf dist",
    "clean:cdk.out": "rimraf cdk.out",
    "update": "npx npm-check-updates -u && npm install"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.100.0",
    "@types/jest": "26.0.23",
    "@types/node": "14.14.44",
    "@types/source-map-support": "0.5.3",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "aws-cdk": "1.100.0",
    "chrome-aws-lambda": "8.0.2",
    "eslint": "7.25.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "26.6.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "string-replace-loader": "3.0.1",
    "ts-jest": "26.5.6",
    "ts-loader": "9.1.2",
    "ts-node": "9.1.1",
    "typescript": "4.2.4",
    "unlazy-loader": "0.1.3",
    "webpack": "5.36.2",
    "webpack-cli": "4.6.0",
    "webpack-node-externals": "3.0.0"
  },
  "dependencies": {
    "@aws-cdk/aws-dynamodb": "1.100.0",
    "@aws-cdk/aws-events": "1.100.0",
    "@aws-cdk/aws-events-targets": "1.100.0",
    "@aws-cdk/aws-iam": "1.100.0",
    "@aws-cdk/aws-lambda": "1.100.0",
    "@aws-cdk/aws-ssm": "1.100.0",
    "@aws-cdk/core": "1.100.0",
    "aws-sdk": "2.897.0",
    "dayjs": "1.10.4",
    "puppeteer-core": "8.0.0",
    "source-map-support": "0.5.19"
  }
}
