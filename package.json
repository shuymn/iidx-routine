{
  "name": "iidx-routine",
  "private": true,
  "bin": {
    "iidx-routine": "bin/iidx-routine.js"
  },
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack",
    "deploy": "run-s build deploy:*",
    "deploy:chromium-layer": "npm run zip:chrome-aws-lambda && cdk deploy ChromiumLayerStack",
    "deploy:iidx-routine": "cdk deploy IidxRoutineStack",
    "zip:chrome-aws-lambda": "test -f dist/layers/chrome_aws_lambda.zip || bash scripts/zip-chrome-aws-lambda.sh",
    "dev": "AWS_SDK_LOAD_CONFIG=true NODE_ENV=development ts-node src/main.ts --",
    "diff": "cdk diff",
    "synth": "cdk synth --no-staging > template.yml",
    "test": "jest",
    "typecheck": "tsc -p . --noEmit",
    "clean": "run-s clean:*",
    "clean:dist": "rimraf dist",
    "clean:cdk.out": "rimraf cdk.out"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.64.1",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.11.2",
    "@types/source-map-support": "^0.5.3",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "aws-cdk": "1.64.1",
    "chrome-aws-lambda": "^5.3.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "puppeteer": "^5.3.1",
    "string-replace-loader": "^2.3.0",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.4",
    "ts-node": "^8.1.0",
    "typescript": "~3.9.7",
    "unlazy-loader": "^0.1.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "@aws-cdk/aws-dynamodb": "^1.64.1",
    "@aws-cdk/aws-events": "^1.64.1",
    "@aws-cdk/aws-events-targets": "^1.64.1",
    "@aws-cdk/aws-iam": "^1.64.1",
    "@aws-cdk/aws-lambda": "^1.64.1",
    "@aws-cdk/aws-ssm": "^1.64.1",
    "@aws-cdk/core": "1.64.1",
    "aws-sdk": "^2.761.0",
    "dayjs": "^1.8.36",
    "puppeteer-core": "^5.3.1",
    "puppeteer-extra": "^3.1.15",
    "puppeteer-extra-plugin-recaptcha": "^3.1.18",
    "source-map-support": "^0.5.16"
  }
}
